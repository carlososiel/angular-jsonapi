{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "ES5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true,
    "lib": [
      "dom",
      "es2015.collection",
      "es2015.promise",
      "es5"
    ],
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "reflect-metadata"
    ]
  },
  "files": [
    "angular-jsonapi.ts",
    "angular-jsonapi.spec.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "include": [
    "node_modules/@types"
  ]
}
