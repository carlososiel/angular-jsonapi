{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "ES5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "es2015.collection",
      "es2015.promise",
      "es5"
    ],
    "types" : ["reflect-metadata"]
  },
  "files": [
    "angular-jsonapi.ts",
    "angular-jsonapi.spec.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "angularCompilerOptions": {
    "genDir": ".",
    "debug": true
  }
}